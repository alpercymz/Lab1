
#include <iostream>

using namespace std;

int main()
{
    //question 1
    string x = "";
    long long int y;


    cout << "What is your name?: ";
    cin >> x;
    cout << x << endl;
    cout << "Hello " << x << endl;

    cout << "What is your Student ID: ";
    cin >> y;
    cout << y << endl;
    cout << "Your Student ID is: " << y << endl;

    //question 2
    int number1 = 10;
    int number2 = 8;

    int sum = number1 + number2;
    int diff = number1 - number2;
    int prod = number1 * number2;

    cout << "Number 1 is: " << number1 <<endl<< "Number 2 is: " <<number2<< endl;
    cout << "Sum is: " << sum << endl;
    cout << "Diff is: " << diff << endl;
    cout << "Prod is: " << prod << endl;

    //question 3
    cout << "*" << endl;
    cout << "**" << endl;
    cout << "***" << endl;


    return 0;
}
